<p>
  <strong>物件名</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料</strong>
  <%= @property.rent.to_s(:delimited) %>円
</p>

<p>
  <strong>住所</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考</strong>
  <%= @property.note %>
</p>

<hr>

<% @property.near_stations.each_with_index do |g,i| %>
<h3>最寄り駅<%= "#{i + 1}" %></h3>

<div>
  <strong>路線名</strong>
  <%= g.route %>
</div>

<div>
  <strong>駅名</strong>
  <%= g.name %>
</div>

<div>
  <strong>徒歩分数</strong>
  <%= g.required_time %>
</div>
<% end %>

<%= link_to "編集", edit_property_path(@property.id) %>|<%= link_to "戻る", properties_path %>