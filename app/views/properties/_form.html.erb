<%= form_with(model: @property, local:true) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% @property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="name">
    <%= form.label "物件名" %>
    <%= form.text_field :name %>
  </div>
  
  <div class="rent">
    <%= form.label "賃料" %>
    <%= form.text_field :rent %>
  </div>
  
  <div class="address">
    <%= form.label "住所" %>
    <%= form.text_field :address %>
  </div>
  
  <div class="age">
    <%= form.label "築年数" %>
    <%= form.text_field :age %>
  </div>
  
  <div class="note">
    <%= form.label "備考" %>
    <%= form.text_area :node %>
  </div>
  
  <hr>
  
  <%= form.fields_for :near_stations do |g| %>
    <h3>最寄り駅<%= "#{g.index + 1}" %></h3>
    <div class="st-root">
      <%= g.label "路線名" %>
      <%= g.text_field :route %>
    </div>
  
    <div class="st-name">
      <%= g.label "駅名" %>
      <%= g.text_field :name %>
    </div>
  
    <div class="st-require-time">
      <%= g.label "徒歩分数" %>
      <%= g.text_field :required_time %>
    </div>
  <% end %>
  
  <%= form.submit "登録"%>
  
<% end %>
<%= link_to "戻る", properties_path %>
